	<script type="text/javascript">
		var manager;
		$(function() {
			manager = $("#maingrid").ligerGrid({
				columns : [  {
					display : '表名',
					name : 'tableName',
					align : 'center',
					width:320,
					minWidth : 300,
				}, 
				{
					display : '创建人',
					name : 'createUserName',
					align : 'center',
					width:320,
					minWidth : 300,
				}, 
				{
					display : '备注',
					name : 'comment',
					align : 'center',
					width:320,
					minWidth : 300,
				}	
				],
				autoCheckChildren : false,
				alternatingRow : false,
				checkbox : true,
				rownumbers : true,
				width : '100%',
				height : '90%',
				heightDiff : -2,
				showTitle : true,
				colDraggable : true,
				isScroll : true, 
				frozen : true,
				pageSize : 50,
				pageSizeOptions : [ 20, 30, 40, 50, 100 ],
				url : "${rc.contextPath}/hivetable/queryauthority?commonUserId=$commonUserId",
				isChecked : f_isChecked,
				toolbar : {
					items : [ {
						text : '刷新',
						click : f_reload,
						disable : false,
						icon : 'refresh'
					}, {
						line : true
					},
					
					{
						line : true
					},
					{
						text : '授权',
						disable : false,
						click : edit,
						icon : 'edit'
					},{
						line : true
					},
					 {
						line : true
					} 
					
					]
				},
			});
		});
        
		// 检查是否需要选中
		function f_isChecked(rowdata)
        {
            if (rowdata.isChecked == "Y") 
                return true;
            return false;
        }
		
		
		function edit() {
			var id="";
			var userId = $("#userId" ).find("option:selected").val();
			var data = manager.getCheckedRows();
			if(data.length ==0){	
				LG.showError("请选择一条数据进行编辑.");
				return;
			}
			id = data[0].id;
			var strid = "";
			for(var i =0;i<data.length;i ++) {
				strid +="id="+data[i].id+"&"
			}
			window.location.href = "${rc.contextPath}/hivetable/editauthority?userId="+userId+"&"+strid;
		}
		
		function add() {
			window.location.href = "${rc.contextPath}/hivetable/addhivetable";
		}
		
		function del() {
				var ids="";
				var data = manager.getCheckedRows();
				if(data.length<=0){
					LG.showError("请选择要删除的记录.");
					return;
				}
				for ( var i = 0; i < data.length; i++) {
					ids= ids+data[i].id+",";
				}
			    $.ligerDialog.confirm("您确认删除该数据吗?", function(yes){
					if(yes){
						$.ajax({
							type : 'post',
							cache : false,
							dataType : 'html',
							async : false,
							data : "ids="+ ids,
							url : '${rc.contextPath}/hivetable/deletetable',
							success : function(data) {
								alert(data);
								if (data == "success") {
									LG.showSuccess("删除成功");
									f_reload();
								} else {
									LG.showError("删除失败");
								}
							},
							error : function(xhr, status, errMsg) {
								LG.showAjaxError(xhr, status, errMsg);
							},
							complete : function() {
								LG.hideLoading();
							}
						});
						
					}});
		}
		
		
		function f_reload() {
			manager.loadData();
		}
		
		function toJsonObject(jsonString) {
			if (typeof jsonString == 'object')
				return jsonString;
			jsonString = jsonString.replace(/^(?:\<pre[^\>]*\>)?(\{.*\})(?:\<\/pre\>)?$/ig, "$1");
			return eval('(' + jsonString + ')');
		}	
		
		function f_search_action() {
			$("#form").trigger("checkInput");
			var form = $("#formsearch");
			LG.searchForm(form, manager);
		}

 function selectedUserTotable() {
