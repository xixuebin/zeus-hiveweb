			],
			autoCheckChildren : false,
			alternatingRow : false,
			checkbox : true,
			rownumbers : true,
			width : '100%',
			height : '90%',
			heightDiff : -2,
			showTitle : true,
			colDraggable : true,
			isScroll : true, 
			frozen : true,
			pageSize : 20,
			pageSizeOptions : [ 20, 30, 40, 50, 100 ],
			url : "${rc.contextPath}/hivetable/queryauthority?commonUserId="+userId+"",
			isChecked : f_isChecked,
			toolbar : {
